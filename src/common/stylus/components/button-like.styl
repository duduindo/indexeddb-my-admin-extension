// ==========================================================================
// Components - Button like
// ==========================================================================


.c-button-like
  font-weight 500
  border-radius 4px
  border 1px solid rgba(0, 0, 0, .2)
  padding 7px 12px
  font-size to-em(12px)
  white-space nowrap

  &:not(:disabled)
    background-color #fff

    &:hover
    &:focus
      background-color #f3f3f3
      cursor pointer
      outline-width 0

    &:hover
      box-shadow 0 1px 2px rgba(0, 0, 0, 0.1)

    &:focus
      box-shadow 0 1px 2px rgba(0, 0, 0, 0.1), 0 0 0 2px rgba(66, 133, 244, 0.4)
