// ==========================================================================
// Components - Button like
// ==========================================================================


.c-button-like
  border-radius 4px
  border 1px solid rgba(0, 0, 0, .2)
  padding 7px 12px
  font-size to-em(12px)
  white-space nowrap

  &:not(:disabled)
    &:hover
    &:focus
      cursor pointer
      outline-width 0

    &:hover
      box-shadow 0 1px 2px rgba(0, 0, 0, 0.1)

    &:focus
      box-shadow 0 1px 2px rgba(0, 0, 0, 0.1), 0 0 0 2px rgba(66, 133, 244, 0.4)

  &--primary
    &:not(:disabled)
      background-color #1a73e8
      color #fff

      &:hover
      &:focus
        background-color #00459f

  &--secondary
    &:not(:disabled)
      background-color #fff
      color #000

      &:hover
      &:focus
        background-color #f5f5f5
