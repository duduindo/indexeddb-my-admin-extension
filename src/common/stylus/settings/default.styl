// ==========================================================================
// Default
// ==========================================================================

// Grid
// ==========================================================================
$medias      ?= xs sm md lg
$columns     ?= 1..12

$grid-breakpoints ?= {
  xs: screen,
  sm: 576px,
  md: 768px,
  lg: 992px,
}

$grid-breakpoints-max ?= {
  xs: $grid-breakpoints[sm] - 1,
  sm: $grid-breakpoints[md] - 1,
  md: $grid-breakpoints[lg] - 1,
  lg: 100vw,
}

// Type and Colors
// ==========================================================================

// Type
$font-size-base               ?= 13px
$platform-linux-font-family   ?= Roboto, Ubuntu, Arial, sans-serif
$platform-mac-font-family     ?= '.SFNSDisplay-Regular', 'Helvetica Neue', 'Lucida Grande', sans-serif
$platform-windows-font-family ?= 'Segoe UI', Tahoma, sans-serif

// Color
// $platform-linux-color     ?= $color-blue-dark
// $platform-mac-color       ?= $color-blue-dark
// $platform-windows-color   ?= $color-black

// Headings
$headings-font-base   ?= $font-size-base
$headings-font-weight ?= 400
$h1-font-size         ?= $headings-font-base * 1.3
$h2-font-size         ?= $headings-font-base * 1.2
$h3-font-size         ?= $headings-font-base * 1.1
$h4-font-size         ?= $headings-font-base * 1.05
$h5-font-size         ?= $headings-font-base * 1.025
$h6-font-size         ?= $headings-font-base
