// ==========================================================================
// Variables
// ==========================================================================


// Type
$font-size-base               ?= .750rem !default // 13px, assumes the browser default, typically `16px`
$font-family-platform-linux   ?= Roboto, Ubuntu, Arial, sans-serif !default
$font-family-platform-mac     ?= '.SFNSDisplay-Regular', 'Helvetica Neue', 'Lucida Grande', sans-serif !default
$font-family-platform-windows ?= 'Segoe UI', Tahoma, sans-serif !default

// Color
$color-blue       ?= #1a73e8
$color-blue-dark  ?= #303942
$color-black      ?= #222

// Headings
$headings-font-base   ?= $font-size-base !default
$headings-font-weight ?= 400 !default

:root {
  // Type
  --platform-linux-font-family $font-family-platform-linux
  --platform-mac-font-family $font-family-platform-mac
  --platform-windows-font-family $font-family-platform-windows

  // Headings
  --h1-font-size $headings-font-base * 1.3
  --h2-font-size $headings-font-base * 1.2
  --h3-font-size $headings-font-base * 1.1
  --h4-font-size $headings-font-base * 1.05
  --h5-font-size $headings-font-base * 1.025
  --h6-font-size $headings-font-base
  --headings-font-weight $headings-font-weight

  // Colors
  --platform-linux-color $color-blue-dark
  --platform-mac-color $color-blue-dark
  --platform-windows-color $color-black
}
