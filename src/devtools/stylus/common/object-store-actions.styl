// ==========================================================================
// Object Store Actions
// ==========================================================================

.c-object-store-actions
  background-color var(--aside-bg-color)

  .pure-button
    background rgba(0,0,0,0)

    &:hover
    &:active
    &:focus
      background rgba(0,0,0,0)
      box-shadow none

    &:active
      transform scale(0.7)

    svg
      transform scale(1.15)

    .fa-caret-left
    .fa-caret-right
    .fa-js
      transform scale(1.5)

  .pure-field[type="search"]
    padding 0.25em 0.6em
    margin-right 1em
