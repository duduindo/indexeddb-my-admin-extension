{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "target": "esnext",
    "module": "esnext",
    "baseUrl": ".",
    "newLine": "lf",
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "outDir": "dist/",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "typings/**/*.d.ts",
    "node_modules/@*/types-*/*.d.ts",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
  ],
  "types": [
    "chrome"
  ],
  "globals": {
    "ts-jest": {
      "diagnostics": true
    }
  }
}
